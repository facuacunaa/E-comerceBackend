<div class="products-container">
	<h1 class="products-title">Product</h1>

		<div class="products-item">
			<p class="products-text">Producto: {{product.title}}</p>
			<p class="products-text">Descripcion: {{product.description}}</p>
			<p class="products-text">Precio: ${{product.price}}</p>
			<p class="products-text">Stock: {{product.stock}}</p>
			<p class="products-text">Categoria: {{product.category}}</p>
			<a href="/api/carts/{{cart}}/product/{{product._id}}" class="products-link-cart" target="_blank">Add to cart</a>
		</div>

</div>